<%- include("partials/header"); -%>

<h1>HOME</h1>
<p><%= startingContent %></p>

 
<% display.forEach(element => { %>

<h1> 
  <form action="/delete" method="POST">

   
 <button name="deleteBtn" value="<%= element._id %>" id="btn__submit"> <i class="fas fa-trash icon__left "></i>
  </button>
  
<div class="modal__content">
  <div class="modal__body">
    <a href="/" class="modal__icon">
    <i class="fas fa-times"></i>
  </a>
  <p>Are you sure you want to delete this post</p>
  <button class="modal__btn">Yes</button>
</div>
</div>
  <%= element.title %>
</h1>
<p>
  <%= element.content.substring(0, 100) + " ..." %>
  <a href="/posts/<%=element.title%>" class="post-link">Read More</a>
</p>
<% }); %>

</form>
<%- include("partials/footer"); -%>
